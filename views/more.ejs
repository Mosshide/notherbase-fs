<div class="content invisible" id="more">
    <h4>Message Nother</h4>
    <textarea id="content"></textarea>
    <button id="send">Send Message</button>
</div>

<script>
    $("#contact").on("click", (e) => {
        $("#contact-form").toggleClass("invisible");
    });

    $("#send").on("click", (e) => {
        $.post("/contact", 
        {
            location: "Test",
            content: $("#content").val(),
        }, 
        function () {
            $("#content").val("");
        });
    });
</script>